<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Memo</th>
      <th>Level</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book, class: 'widelink' %></td>
        <td><%= link_to book.author, book, class: 'widelink' %></td>
        <td><%= link_to book.publisher, book, class: 'widelink' %></td>
        <td><%= link_to book.memo, book, class: 'widelink' %></td>
        <td><%= link_to book.level.title, book, class: 'widelink' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

