<%= form_with(model: book, html: {class: 'form-horizontal', role: 'form'}) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: 'col-sm-1 control-label' %>
    <div class='col-sm-10'>
      <%= form.text_field :title %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :author, class: 'col-sm-1 control-label' %>
    <div class='col-sm-10'>
      <%= form.text_field :author %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :publisher, class: 'col-sm-1 control-label' %>
    <div class='col-sm-10'>
      <%= form.text_field :publisher %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :memo, class: 'col-sm-1 control-label' %>
    <div class='col-sm-10'>
      <%= form.text_area :memo %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :level_id, class: 'col-sm-1 control-label' %>
    <div class='col-sm-10'>
      <%= form.collection_select :level_id, Level.all, :id, :title %>
    </div>
  </div>

  <div class="actions">
    <div class='form-group'>
      <div class='col-sm-offset-1 col-sm-10'>
        <%= form.submit 'Submit',class: 'btn btn-success' %>
        <%= link_to 'Back', :back, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
